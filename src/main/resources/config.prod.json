{
  "port": {
    "env": "PORT"
  },
  "db": {
    "host": {
      "env": "DB_HOST"
    },
    "user": {
      "env": "DB_USER"
    },
    "password": {
      "env": "DB_PASSWORD"
    },
    "driver": {
      "env": "DB_DRIVER"
    }
  },
  "jwt": {
    "secret": {
      "env": "JWT_SECRET"
    },
    "issuer": {
      "env": "JWT_ISSUER"
    },
    "audience": {
      "env": "JWT_AUDIENCE"
    },
    "expiration": {
      "env": "JWT_EXPIRES_IN"
    }
  }
}

